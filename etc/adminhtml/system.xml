<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="store_customer_address_limits" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0"
                 showInStore="1">
            <label>Customer Address Limit</label>
            <tab>default</tab>
            <resource>IlliaNova_CustomerAddressLimits::settings</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enable" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Enable Customer Address Limits</comment>
                </field>
            </group>
        </section>
    </system>
</config>
